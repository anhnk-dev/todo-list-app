= f.hidden_field :user_id

.grid.grid-cols-1.gap-x-6.gap-y-8{ class: "sm:grid-cols-6" }
  %div{ class: "sm:col-span-3" }
    %label.block.text-md.font-medium.leading-6.text-gray-900 Title
    .flex.rounded-md.shadow-sm.ring-1.ring-inset.ring-gray-300.mt-2{ class: "focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md" }
      = f.text_field :title, class: "block w-full rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true

  %div{ class: "sm:col-span-3" }
    %label.block.text-md.font-medium.leading-6.text-gray-900 Priority
    = f.select :priority, options_for_select(Task.priorities.map{ |name, value| [name.capitalize, name] }), { }, { class: "block w-full rounded-md border-0 py-2.5 mt-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true }

.grid.grid-cols-1.gap-x-6.gap-y-8.mt-8{ class: "sm:grid-cols-6" }
  %div{ class: "sm:col-span-6" }
    %label.block.text-md.font-medium.leading-6.text-gray-900 Sub-title
    .flex.rounded-md.shadow-sm.ring-1.ring-inset.ring-gray-300.mt-2{ class: "focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600" }
      = f.text_field :sub_title, class: "block w-full rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"

.grid.grid-cols-1.gap-x-6.gap-y-8.mt-8{ class: "sm:grid-cols-6" }
  %div{ class: "sm:col-span-6" }
    %label.block.text-md.font-medium.leading-6.text-gray-900 Due Date
    = f.datetime_select :due_date, { selected: Time.zone.now }, { class: "inline-flex rounded-md border-0 py-2.5 mt-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true }

.flex.items-center.justify-end.gap-x-6.mt-10
  = link_to 'Back', root_path, class: "text-md font-medium leading-6 text-gray-900 mr-4"
  = f.submit 'Create', class: "rounded-md bg-blue-600 px-5 py-2 text-md font-medium text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
